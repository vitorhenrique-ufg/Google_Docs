<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Documento</title>
    <link rel="stylesheet" href=@Url.Content("~/lib/font-awesome/css/fontawesome.min.css") />
    <link rel="stylesheet" href=@Url.Content("~/lib/font-awesome/css/light.min.css") />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoogleDocs.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-grid.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-reboot.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-utilities.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" id="navbar-documento">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="ManipuladorDocs" asp-action="Index">Software concorrente e distribuído</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            @*<div class="me-4 bg-primary rounded-circle text-white d-flex justify-content-center align-items-center position-relative" style="width:36px;height:41px">
                <i class="fa-solid fa-person" style="font-size: 30pt;"></i>
                <span class="position-absolute top-50 start-50 mt-3 translate-middle badge bg-dark border border-2 border-light" style="font-size:.5rem">Usuário 1</span>
            </div>*@
        </nav>
    </header>
    <div class="container">
        <form role="main" class="pb-3">
            @RenderBody()
        </form>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - GoogleDocs - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/umd/popper.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/bootstrap/js/bootstrap.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
